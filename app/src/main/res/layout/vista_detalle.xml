<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/contenerCard_ListaDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:id="@+id/linear_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/style_border_2">

            <!-- Primera columna -->
            <View
                android:id="@+id/view_colorDetalle"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@android:color/holo_green_dark"/>

            <!-- Segunda columna -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Contenido de la segunda columna -->
                <TextView
                    android:id="@+id/tv_fechaDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="2024-01-28"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_horaDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="09:21"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:background="@color/gris"
                android:layout_marginTop="5dp"/>
            <!-- Tercera columna -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="8dp">
                <!-- Contenido de la tercera columna -->
                <TextView
                    android:id="@+id/tv_idregistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="10000"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/generic_color"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/tv_analistaDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="JHONATAN JUNIOR CALDERON HERNANDEZ"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/generic_color"/>
                <TextView
                    android:id="@+id/tv_areaTrabDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Investigador"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/tv_horarioDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Lunes a Domingo"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="left"/>
            </LinearLayout>

            <!-- Cuarta columna -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:gravity="end">
                <!-- Contenido de la cuarta columna -->
                <TextView
                    android:id="@+id/tv_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/icon_pdf"/>
                <TextView
                    android:id="@+id/tv_editar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/ic_edit"/>
                <TextView
                    android:id="@+id/tv_eliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:background="@drawable/ic_delete"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

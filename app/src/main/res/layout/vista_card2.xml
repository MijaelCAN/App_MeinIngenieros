<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/contenerCard_OrdenTrabajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        android:backgroundTint="#EFEDED">
        <LinearLayout
            android:id="@+id/idCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/style_border_1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="2dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="18dp">
                    <TextView
                        android:id="@+id/text_view_formato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OT_001_761_2023"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/generic_color"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="14dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:text="Total: "/>
                    <TextView
                        android:id="@+id/text_view_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@drawable/style_circ_generic"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="2dp">
            <!--NUEVOOOO  lAYOUT-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical">
                <!-- Título Central -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_empresa"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/text_view_empresa"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint=" SIG CONSULTING S.A.C."
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right">
                <!-- Título Central -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Realizado "
                    android:textSize="10sp"
                    android:gravity="right"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/text_view_realizado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:hint=" 2"
                    android:gravity="center"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:background="@drawable/style_circ_succ"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <!-- Título Central -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Por Realizar "
                        android:textSize="10sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/text_view_realizar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:hint="1"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:background="@drawable/style_circ_dang"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>